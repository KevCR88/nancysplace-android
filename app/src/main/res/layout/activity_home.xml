<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_activity_home"
    android:padding="32dp"
    tools:context=".View.HomeActivity">

    <Button
        android:id="@+id/btnVentas"
        android:layout_width="263dp"
        android:layout_height="89dp"
        android:backgroundTint="#ffe7c2"
        android:padding="16dp"
        android:text="MÓDULO VENTAS"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnProductos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnProductos"
        android:layout_width="223dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ffe7c2"
        android:padding="16dp"
        android:text="MÓDULO PRODUCTOS"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVentas" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="257dp"
        android:layout_height="67dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#ffd9c2"
        android:text="CERRAR SESIÓN"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
